{{#partial "contenido"}}
<!DOCTYPE html>
<html>
<head>
	<title>Home</title>
    <link rel="stylesheet" href="/css/homeAlumno.css">
</head>

<body>
	<div class="contenedorInfo">
		<div class="contenedorPerfil">
			<table class="tablaPerfil">
    			<tr>
     				<th>Nombre</th>
      				<td>{{nombre}}</td>
    			</tr>
    			<tr>
      				<th>Apellido</th>
      				<td>{{apellido}}</td>
    			</tr>
    			<tr>
      				<th>Legajo</th>
      				<td>{{legajo}}</td>
    			</tr>
    			<tr>
      				<th>Usuario de github</th>
      				<td>{{githubUser}}</td>
    			</tr>
    			<tr>
      				<th>Password</th>
      				<td>{{password}}</td>
    			</tr>
			</table>
			<button type="button" class="btn btn-secondary btn-lg">Editar</button>
		</div>
		<div class="contenedorAsignaciones">
			<table class="table table-dark">
				<thead>
    				<tr>
    				<tr>
      					<th scope="col">Asignatura</th>
      					<th scope="col">Descripcion</th>
      					<th scope="col">Estado</th>
    				</tr>
  				</thead>
  				<tbody>		
					{{#each asignaciones}}
					<tr class="asignacion">
      					<th scope="row" class="colIzquierda">{{title}}</th>
      					<td>{{descripcion}}</td>
      					<td>{{estado}}</td>
    				</tr>
					{{/each}}
  				</tbody>
			</table>
		</div>
	</div>
	
</body>

</html>

{{/partial}}
{{>layout.hbs}}